<%= form_for(@author) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :nom, placeholder: "Last Name..." %>
    <%= f.text_field :prenom, placeholder: "First Name..." %>	
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
