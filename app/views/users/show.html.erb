<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.authors.any? %>
      <h3>Authors (<%= @user.authors.count %>)</h3>
      <ol class="authors">
        <%= render @authors %>
      </ol>
      <%= will_paginate @authors %>
    <% end %>
  </div>
</div>
